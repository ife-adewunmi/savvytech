{
  "name": "savvytech",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "cross-env INIT_CWD=$PWD next dev",
    "build": "cross-env INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules' node src/scripts/postbuild.mjs",
    "ts:check": "tsc",
    "serve": "next start",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir src/components --dir lib --dir src/layouts --dir src/scripts",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:check": "prettier -c './src/**/*.{ts,tsx,js}'",
    "prettier:fix-src": "prettier -c './src/**/*.{ts,tsx,js}' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn ts:check && yarn lint && git add ."
    }
  },
  "dependencies": {
    "@hcaptcha/react-hcaptcha": "^1.11.0",
    "@headlessui/react": "1.7.19",
    "@next/bundle-analyzer": "14.2.3",
    "@reduxjs/toolkit": "^2.2.7",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.12",
    "@types/nodemailer": "^6.4.16",
    "@types/validator": "^13.12.2",
    "autoprefixer": "^10.4.13",
    "axios": "^1.7.7",
    "contentlayer2": "0.4.6",
    "esbuild": "0.20.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.2",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "image-size": "1.0.0",
    "isomorphic-dompurify": "^2.16.0",
    "next": "14.2.3",
    "next-contentlayer2": "0.4.6",
    "next-themes": "^0.3.0",
    "nodemailer": "^6.9.15",
    "pliny": "0.2.1",
    "postcss": "^8.4.24",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "^5.2.1",
    "react-redux": "^9.1.2",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.0.0",
    "rehype-katex": "^7.0.0",
    "rehype-preset-minify": "7.0.0",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.0",
    "remark-gfm": "^4.0.0",
    "remark-github-blockquote-alert": "^1.2.1",
    "remark-math": "^6.0.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.3",
    "unist-util-visit": "^5.0.0",
    "validator": "^13.12.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.0.1",
    "@types/mdx": "^2.0.12",
    "@types/react": "^18.2.73",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.6.1"
}
